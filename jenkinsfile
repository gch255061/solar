pipeline {
  agent any

  tools {
    nodejs 'NodeJs 18'
  }

  stages {
    stage('Check Node') {
      steps {
        sh '''
          node -v
          npm -v
        '''
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'npm install'
      }
    }

    stage('NPM Audit') {
      steps {
        sh 'npm audit || true'
      }
    }
  }
}
